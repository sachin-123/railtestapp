<%= form_for @employee, :url => { :action => "create" }, :html => {:class => "nifty_form"} do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br>
	<%= f.label :email %><br />
    <%= f.text_field :email %><br>
	<%= f.label :phone %><br />
    <%= f.text_field :phone %><br>
	<%= f.label :address %><br />
    <%= f.text_field :address %><br>
	<%= f.label :country %><br />
    <%= f.text_field :country %><br>
	<%= f.label :state %><br />
    <%= f.text_field :state %><br>
  </div>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>
 